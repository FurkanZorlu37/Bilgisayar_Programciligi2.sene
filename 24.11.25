      "cell_type": "code",
      "source": [
        "import random;\n",
        "random_number = random.randint(1, 100)\n",
        "\n",
        "print(\"Selamlar 1'den 100'e bir sayı tahmin et :D\")\n",
        "deneme_sayisi = 0\n",
        "max_deneme = 7\n",
        "\n",
        "while True:\n",
        "    deneme_sayisi += 1\n",
        "    if deneme_sayisi > max_deneme:\n",
        "        print(f\"Deneme hakkınız bitti! Doğru sayı {random_number} idi.\")\n",
        "        break\n",
        "\n",
        "    try:\n",
        "        kullanici_tahmini = int(input(f\"Lütfen bir sayı girin (Deneme {deneme_sayisi}/{max_deneme}): \"))\n",
        "    except ValueError:\n",
        "        print(\"Hatalı giriş yaptınız. Lütfen geçerli bir sayı girin.\\n\")\n",
        "        deneme_sayisi -= 1\n",
        "        continue\n",
        "\n",
        "    if kullanici_tahmini == random_number:\n",
        "        print(f\"Tebrikler bildiniz! {deneme_sayisi} denemede buldunuz.\\nSayınız:{random_number}\")\n",
        "        break;\n",
        "    elif kullanici_tahmini > random_number:\n",
        "        print(\"Daha küçük bir sayı deneyin.\")\n",
        "    else:\n",
        "        print(\"Daha büyük bir sayı deneyin.\")\n"
      ],
